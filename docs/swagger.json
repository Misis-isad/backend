{
    "swagger": "2.0",
    "info": {
        "description": "This is a sample server for Profbuh API.",
        "title": "Profbuh API",
        "contact": {}
    },
    "host": "localhost:8000",
    "paths": {
        "/api/v1/article/create": {
            "post": {
                "security": [
                    {
                        "Bearer": []
                    }
                ],
                "description": "Create article",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "article"
                ],
                "summary": "Create article",
                "parameters": [
                    {
                        "description": "Article create info",
                        "name": "article",
